{
	"name": "portfolio-v2.0",
	"version": "0.1.0",
	"private": false,
	"homepage": "https://arshadshah.com/portfolio",
	"description": "A portfolio website for Arshad Shah",
	"main": "index.js",
	"keywords": [
		"portfolio",
		"arshad",
		"arshadshah",
		"arshadshah.com"
	],
	"author": "Arshad Shah",
	"license": "MIT",
	"dependencies": {
		"@emotion/react": "^11.7.0",
		"@emotion/styled": "^11.6.0",
		"@mui/material": "^5.2.3",
		"@mui/styles": "^5.2.3",
		"@testing-library/jest-dom": "^5.14.1",
		"@testing-library/react": "^12.1.2",
		"@testing-library/user-event": "^13.2.1",
		"@types/jest": "^27.0.2",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-ga": "^3.3.0",
		"react-gtm-module": "^2.0.11",
		"react-icons": "^4.3.1",
		"react-lazy-load-image-component": "^1.5.1",
		"react-router-dom": "^5.3.0",
		"react-scripts": "4.0.3",
		"react-scroll": "^1.8.4"
	},
	"scripts": {
		"start": "react-scripts start",
		"build": "react-scripts build",
		"test": "react-scripts test",
		"eject": "react-scripts eject",
		"clean:output": "cd ./e2e && rmdir /s /q output",
		"e2e:clean": "concurrently --kill-others \"chromedriver\" \"yarn clean:output && cd ./e2e && yarn codeceptjs\"",
		"e2e": "concurrently --kill-others \"chromedriver\" \"cd ./e2e && yarn codeceptjs\"",
		"e2e:headless": "concurrently --kill-others \"chromedriver\" \"cd ./e2e && yarn codeceptjs:headless\"",
		"e2e:ui": "concurrently --kill-others \"chromedriver\" \"cd ./e2e && yarn codeceptjs:ui\"",
		"allure:reports": "cd ./e2e && allure serve output",
		"lint": "eslint --ext .js src",
		"fix": "eslint --ext .js src --fix",
		"lint:fix": "yarn lint && yarn fix",
		"prettier:check": "prettier --check ./src",
		"prettier:write": "prettier --write ./src"
	},
	"prettier": "eslint-config-prettier",
	"lint-staged": {
		"*.(js)": [
			"yarn prettier --write ./src",
			"yarn lint:fix"
		]
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"concurrently": "^6.3.0",
		"eslint": "7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-react": "^7.27.1",
		"prettier": "^2.5.0",
		"pretty-quick": "^3.1.2",
		"react-test-renderer": "^17.0.2"
	},
	"jest": {
		"collectCoverageFrom": [
			"src/**/*.js",
			"!src/index.js",
			"!src/hooks/*.js",
			"!src/context/*.js"
		]
	}
}
